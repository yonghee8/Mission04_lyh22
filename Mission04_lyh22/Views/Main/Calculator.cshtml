@{
    ViewData["Header"] = "Yonghee Lee";
    @model CalculatorModel;
}

<h3>Grade Calculator</h3>
<!-- Form for the grade calculator -->
<form method="post">
    <label>Assignments:</label>
    <input id="assignments" asp-for="A" /> <br />
    <label>Group Project:</label>
    <input id="project" asp-for="P" /><br />
    <label>Quizzes:</label>
    <input id="quizzes" asp-for="Q" /><br />
    <label>Midterm Exam:</label>
    <input id="midterm" asp-for="M" /><br />
    <label>Final Exam:</label>
    <input id="final" asp-for="F" /><br />
    <label>INTEX:</label>
    <input id="intex" asp-for="I" /><br /><br />
    <input id="calculate-btn" type="submit" value="Calculate Grade" />
    <br /><br />
    <output id="letter-grade"></output>

    <div asp-validation-summary="All"></div>
</form>
<br />

<!-- Link to custom JavaScript file for grade calculator -->
<script src="js/GradeCalculator.js"></script>