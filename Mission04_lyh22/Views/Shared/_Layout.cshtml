<!DOCTYPE html>

<html>

<head>
    <meta name="viewport" content="width=device-width" />
    <meta charset="utf-8" />
    <!-- Set the title of the page -->
    <title>@ViewData["Title"]</title>
    <!-- Link to bootstrap CSS file -->
    <link href="lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Link to custom CSS file -->
    <link href="css/default.css" rel="stylesheet" />
    <!-- Link to the favicon -->
    <link rel="shortcut icon" type="image/x-icon" href="img/apple-2327.png" />
    <!-- Link to Jquery library -->
    <script src="lib/jquery/jquery-3.6.3.min.js"></script>
</head>

<body>

    <nav>
        <a asp-controller="Main" asp-action="Index">Home</a>
        <a asp-controller="Main" asp-action="Calculator">Grade Calculator</a>
    </nav>

    <h1>@ViewData["Header"]</h1>

    <div>
        @RenderBody()
    </div>
    <footer>This is the footer</footer>
</body>

</html>
